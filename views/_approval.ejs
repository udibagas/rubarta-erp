<div class="flex border-black border mt-10 justify-evenly justify-items-center items-center text-center p-2">
<% approvals.forEach(approval => { %>
  <div>
    <strong><%= actions[approval.approvalActionType] %></strong>
    <div style="height: 80px; padding: 10px 0" class="text-center">

      <% if (approval.approvalStatus == 'APPROVED') { %>
        <% if (approval.User.signatureSpeciment) { %>
          <img
            src="/<%= approval.User.signatureSpeciment.filePath %>"
            style="height: 60px; margin: 0 auto"
          />
        <% } else { %>
          <div class="mt-3 p-2 rounded-full text-white bg-green-400">APPROVED</div>
        <% } %>
      <% } %>

      <% if (approval.approvalStatus == null) { %>
         <div class="mt-3 p-2 rounded-full text-white bg-gray-400">PENDING</div>
      <% } %>
    </div>

    <div>
      <%= approval.approvalStatus ? formatDateNumeric(approval.updatedAt) : ' ' %>
    </div>
    <div class="font-bold">
      (<%= approval.User?.name %>)
    </div>
    
  </div>
<% }) %>
  
</div>
