<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NKP REPORT</title>
    <link rel="stylesheet" href="/css/main.css" />
    <style>
      * {
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <div class="flex justify-center items-center">
      <div
        style="width: 1000px;"
        class="border-4 border-gray-400 p-6"
      >
        <div class="flex flex-col items-center">
          <div class="text-2xl border-black border-b">
            LAPORAN NKP
          </div>
          <div class="text-xl border-black border-b mt-2 font-bold">
            <%= data.company.name.toUpperCase() %>
          </div>
        </div>

        <table class="border border-black font-bold mt-10">
          <tbody>
            <tr class="border-b border-black">
              <td class="w-1/4 p-1">TYPE</td>
              <td class="p-1">: <%= paymentType %></td>
            </tr>
            <tr>
              <td class="p-1">DATE</td>
              <td class="p-1">: <%= dateRange %></td>
            </tr>
          </tbody>
        </table>

        <table class="mt-10 border border-black w-full">
          <thead>
            <tr>
              <th class="border-b border-r border-black">NO</th>
              <th class="border-b border-r border-black">DATE</th>
              <th class="border-b border-r border-black">DESCRIPTION</th>
              <th class="border-b border-r border-black">AMOUNT</th>
              <th class="border-b border-r border-black">CURR</th>
            </tr>
          </thead>
          <tbody>
            <% data.data.forEach((el, i) => { %>
            <tr>
              <td class="border-b border-r border-black text-center"><%= ++i %></td>
              <td class="border-b border-r border-black text-center"><%= formatDateNumeric(el.date) %></td>
              <td class="border-b border-r border-black pl-2"><%= el.description %></td>
              <td class="border-b border-r border-black text-right pr-2"><%= toDecimal(el.finalPayment) %></td>
              <td class="border-b border-r border-black text-center"><%= el.currency %></td>
            </tr>
            <% }) %>
          </tbody>

        </table>
      </div>
    </div>

    <script>
      // window.print()
    </script>
  </body>
</html>
