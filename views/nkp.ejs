<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NKP</title>
    <link rel="stylesheet" href="/css/main.css" />
    <style>
      * {
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <div class="flex justify-center items-center">
      <div
        style="width: 1000px;"
        class="border-solid border-4 border-gray-400 p-6"
      >
        <div class="flex flex-col items-center">
          <div class="text-3xl border-black border-b-2">
            NOTA KUASA PEMBAYARAN
          </div>
          <div class="text-2xl border-black border-b-2 mt-2 font-bold">
            <%= data.Company.name.toUpperCase() %>
          </div>
        </div>

        <table class="border-4 font-bold mt-10">
          <tbody>
            <tr class="border-b-2">
              <td class="w-1/3 p-1">NKP NO</td>
              <td class="p-1">: <%= data.number %></td>
            </tr>
            <tr>
              <td class="p-1">NKP DATE</td>
              <td class="p-1">: <%= formatDate(data.date) %></td>
            </tr>
          </tbody>
        </table>

        <table class="w-full font-bold mt-10">
          <tbody>
            <tr>
              <td class="w-1/3 p-1">
                <%= data.paymentType == 'EMPLOYEE' ? 'TRANSFER' : 'PAYMENT' %>
                TO
              </td>
              <td class="border-b-2 p-1">
                : <%= data.paymentType == 'EMPLOYEE' ?
                data.Employee?.name?.toUpperCase() :
                data.Supplier?.name?.toUpperCase() %>
              </td>
            </tr>
            <tr>
              <td>BANK & ACCOUNT NO</td>
              <td class="border-b-2">
                : <%= data.Bank.code %> - <%= data.bankAccount %> (<%=
                data.currency %>)
              </td>
            </tr>
            <tr>
              <td>DESCRIPTION</td>
              <td class="border-b-2">: <%= data.description %></td>
            </tr>
          </tbody>
        </table>

        <table class="mt-10 border-4 w-full">
          <thead>
            <tr>
              <th class="border-b-2 border-r-2">NO</th>
              <th class="border-b-2 border-r-2">DATE</th>
              <th class="border-b-2 border-r-2">DESCRIPTION</th>
              <th class="border-b-2 border-r-2">AMOUNT</th>
              <th class="border-b-2">CURR</th>
            </tr>
          </thead>
          <tbody>
            <% data.PaymentAuthorizationItem.forEach((el, i) => { %>
            <tr>
              <td class="border-b-2 border-r-2 text-center"><%= ++i %></td>
              <td class="border-b-2 border-r-2 text-center"><%= formatDate(el.date) %></td>
              <td class="border-b-2 border-r-2 pl-2"><%= el.description %></td>
              <td class="border-b-2 border-r-2 text-right pr-2"><%= toDecimal(el.amount) %></td>
              <td class="border-b-2 text-center"><%= el.currency %></td>
            </tr>
            <% }) %>
          </tbody>

          <tfoot>
            <tr>
              <td colspan="3" class="border-b-2 border-r-2 text-center font-bold">TOTAL</td>
              <td class="border-b-2 border-r-2 text-right pr-2"><%= toDecimal(data.grandTotal) %></td>
              <td class="border-b-2 text-center"><%= data.currency %></td>
            </tr>
            <tr>
              <td colspan="4" class="font-bold px-2 border-r-2">TERBILANG : <%= terbilang(data.finalPayment).toUpperCase() %></td>
              <td class="text-center"><%= data.currency  %></td>
            </tr>
          </tfoot>
        </table>

        <%- include('_approval', { approvals: data.PaymentAuthorizationApproval }) %>
      </div>
    </div>
  </body>
</html>
